<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/buy_step2_bg">

        <LinearLayout
            android:id="@+id/lin_all_lottery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出票成功！共 "
                android:textColor="@color/txt_color_333333"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/txt_all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/txt_color_f0264c"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 张"
                android:textColor="@color/txt_color_333333"
                android:textSize="23dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_out_ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:text="支付成功！正在出票...（1/1）"
            android:textColor="@color/txt_color_333333"
            android:textSize="23dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="347dp">

            <ImageView
                android:id="@+id/image_ticket"
                android:layout_width="224dp"
                android:layout_height="277.3dp"
                android:src="@mipmap/buy_step2_ticket" />

            <com.tc.lottery.view.SuccessView
                android:id="@+id/success_view"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />


        </RelativeLayout>

        <ImageView
            android:layout_width="224dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="347dp"
            android:src="@mipmap/buy_step2_mask" />

        <LinearLayout
            android:id="@+id/lin_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="200dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="98.6dp"
                android:layout_height="98.6dp"
                android:src="@mipmap/tips" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="请及时取走您的彩票！"
                android:textColor="@color/txt_color_333333"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="购买多张彩票时，取走当前彩票设备才能继续出票。"
                android:textColor="@color/txt_color_333333"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="233.3dp"
            android:orientation="horizontal"
            android:paddingLeft="78dp"
            android:paddingRight="78dp"
            android:visibility="gone">

            <Button
                android:id="@+id/bt_how"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginRight="23.3dp"
                android:layout_weight="1"
                android:background="@drawable/bt_selector_how"
                android:gravity="center"
                android:text="如何兑奖"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/bt_back"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginRight="23.3dp"
                android:layout_weight="1"
                android:background="@drawable/bt_selector_back_2"
                android:gravity="center"
                android:text="返回主界面(90)"
                android:textColor="@color/txt_color_333333"
                android:textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/view_bottom"
        layout="@layout/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>